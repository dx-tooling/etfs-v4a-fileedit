{
    "name": "dx-tooling/php-v4a-fileedit",
    "description": "PHP library for applying V4A diffs to text files",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "erickskrauch/php-cs-fixer-custom-fixers": "^1.3",
        "ergebnis/phpstan-rules": "^2.12.0",
        "friendsofphp/php-cs-fixer": "^3.89.2",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0.7",
        "pestphp/pest": "^4.1.3",
        "tomasvotruba/type-coverage": "^2.0.2"
    },
    "autoload": {
        "psr-4": {
            "V4AFileEdit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "V4AFileEdit\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    }
}
